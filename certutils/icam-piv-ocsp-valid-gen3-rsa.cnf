[ default]
dir = .
new_certs_dir = $dir
database = ${dir}/database/piv-gen3-index.txt 
unique_subject = no
name_opt = utf8
x509_extensions = v3_ocsp
default_days = 2190 
default_md = sha256
serial = database/piv-gen3-serial
policy = policy_match
email_in_dn = no
crl_extensions = crl_ext

[ ca ]
default_ca = ca_rsa2048

[ ca_rsa2048 ]
private_key = ${dir}/pem/ICAM_Test_Card_PIV_Signing_CA_-_gold_gen3.private.pem 
certificate = ${dir}/pem/ICAM_Test_Card_PIV_Signing_CA_-_gold_gen3.crt 

[ policy_match ]
C = match
O = optional
OU = optional
CN = optional
emailAddress = optional

[ crl_ext ]
authorityKeyIdentifier=keyid:always,issuer:always

[ req ]
prompt = yes
distinguished_name = req_distinguished_name
attributes = req_attributes
req_extensions = v3_req

[ req_distinguished_name ]
C = Country Name
C_default = US
O = Organization
O_default = U.S. Government 
OU = Organizational Unit
OU_default = ICAM Test Cards
CN = Common Name
CN_default = $ENV::CN
emailAddress = E-Mail Address
emailAddress_default = icam.test.cards@gsa.gov

[ req_attributes ]

[ v3_req ]
basicConstraints = CA:FALSE
subjectKeyIdentifier = hash

[ v3_ocsp ]
basicConstraints = CA:FALSE
authorityKeyIdentifier = keyid:issuer
subjectKeyIdentifier = hash
extendedKeyUsage=critical,OCSPSigning
keyUsage = critical,digitalSignature
authorityInfoAccess = caIssuers;URI:http://http.apl-test.cite.fpki-lab.gov/aia/certsIssuedToICAMTestCardSigningCA.p7c
crlDistributionPoints = URI:http://http.apl-test.cite.fpki-lab.gov/crls/ICAMTestCardGen3SigningCA.crl
certificatePolicies=ia5org,2.16.840.1.101.3.2.1.48.11,2.16.840.1.101.3.2.1.48.13,2.16.840.1.101.3.2.1.48.9,2.16.840.1.101.3.2.1.48.86
